{
    "manifest_version": 3,
    "name": "Comprehensive Navigation Capture",
    "description": "Capture all SPA/user navigation events with export/save features.",
    "version": "1.0",
    "permissions": [
      "storage",
      "scripting",
      "activeTab",
      "downloads"
    ],
    "host_permissions": ["<all_urls>"],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_title": "Navigation Capture"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"],
        "run_at": "document_idle"
      }
    ]
  }
  